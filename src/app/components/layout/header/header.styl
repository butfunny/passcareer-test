.header {
  padding 12px 15px;
  z-index 1;
  position relative;
  padding-left 160px;


  .logo-image {
    position absolute;
    top: 15px;
    left 20px;
    height: calc(100% - 30px);
  }

  .input-search {
    position relative;
    background #f4f5f8;
    border-radius 5px;
    border: 1px solid #f7f8f9;
    width 300px;
    height 100%;
    padding-left 30px;
    display none;


    @media (min-width 769px) {
       display block;
    }


    .icon {
      position absolute;
      top: 7px;
      left 7px;

      i {
        color #7f7f81;
      }
    }

    .input-control {
      width 100%;
      height 100%;
      outline none;
      border: 0;
      background transparent;
    }
  }

  .user-profile {
    position absolute;
    top: 15px;
    height: calc(100% - 30px);
    right 20px;
    padding-left 45px;

    .avatar {
      width 40px;
      height 40px;
      border-radius 50%;
      position absolute;
      left 0;
      top: 0;
      border: 1px solid #dedede;

    }

    @media (min-width 769px) {
      .user-name, .job-title {
        display block !important;
      }
    }

    .user-name {
      font-weight bold;
      display none;
    }

    .job-title {
      color #7f7f81;
      display none;
    }
  }
}
