.layout {
  position relative;
  min-height 100vh;
  background #f4f5f8;


  @media (min-width 769px) {
    padding-left 65px;
    padding-bottom 0;
    padding-top: 65px;
  }

  .header {
    position absolute;
    top: 0;
    left 0;
    width 100%;
    height 65px;
    border-bottom 1px solid #dedede;
    background white;

    @media (min-width 769px) {
       position fixed;
    }
  }


  .menu-item {
    position fixed;
    bottom 0;
    left 0;
    width 100%;
    height 50px;


    @media (min-width 769px) {
      top: 65px;
      bottom initial;
      left 0;
      width 65px;
      height calc(100vh - 65px);
      z-index 2;
    }
  }

  .container {
    z-index 1;
  }
}
