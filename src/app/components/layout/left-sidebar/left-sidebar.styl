.left-sidebar {
  background white;
  height 100%;
  border-right 1px solid #dedede;
  text-align center;

  .sidebar-item-wrapper {
    .sidebar-item {
      padding 20px 0;
      cursor: pointer;
      position relative;
      display block;

      .tooltip {

        position: absolute;
        left: calc(100% + 10px);
        top: 15px;
        pointer-events none;
        transform translateX(-10px);
        opacity 0;
        transition all .3s;



        .arrow {
          position: absolute;
          top: 0px;
          transform: translate3d(0px, 13px, 0px);
          left: -10px;
          width: 10px;
          height: 10px;
          z-index 1;

          &:after {
            content: '';
            position: absolute;
            width: 10px;
            height: 10px;
            transform: rotate(45deg);
            background-color: #fff;
            box-shadow: 0 4px 14px 0 rgba(0,0,0,.2), 0 0 0 1px rgba(0,0,0,.05);
            border-width: 0;
            border-color: rgba(0,0,0,.1);
          }
        }

        .tooltip-name {
          padding: 8px 12px;
          border-radius: 4px;
          background-color: #fff;
          color: #222;
          font-size: 14px;
          z-index: 2;
          position: relative;
        }

        box-shadow: 0 4px 14px 0 rgba(0, 0, 0, .2), 0 0 0 1px rgba(0, 0, 0, .05);
      }

      &.active, &:hover {
        .icon {
          color primary-color;
        }
      }

      &:hover {
        .tooltip {
          transform translateX(0);
          opacity 1;
        }
      }


      .icon {
        color lighten(#7f7f81, 20%);
        transition color .2s;
      }
    }
  }

  .user-action {
    position absolute;
    bottom: 20px;
    width 100%;
  }


}
